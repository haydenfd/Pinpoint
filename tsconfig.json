{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [".plasmo/index.d.ts", "./**/*.ts", "./**/*.tsx"],
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@assets/*": ["assets/*"],
      "@background/*": ["background/*"],
      "@components/*": ["components/*"],
      "@contents/*": ["contents/*"],
      "@platform/*": ["platform/*"],
      "@tests/*": ["tests/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    }
  }
}
